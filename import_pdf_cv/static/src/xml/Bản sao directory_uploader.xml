<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="import_pdf_cv.DirectoryUploader" owl="1">
        <div class="o_directory_uploader mt-3 text-center" style="
                margin: auto;
                border: 1px solid #abaabb;
                padding: 20px;
                width: 30%;
            ">
            <h4 class="mt-1 mb-3">Select folder</h4>
            <input type="file"
                   t-ref="fileInput"
                   multiple="true"
                   webkitdirectory="true"
                   t-on-change="onFilesSelected"/>
            <div class="alert alert-warning d-none mt-2" t-ref="warning" id="uploader-warning" role="alert">
                Uploading...
            </div>

        </div>
    </t>
</templates>
